<Window x:Class="LogBookWPF.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginForm" Height="300" Width="506.186">
    <Grid>
        <Image Margin="0,0,329,213" Source="dvt.png" Stretch="Fill"/>
        <Grid HorizontalAlignment="Left" Height="72" Margin="0,197,0,0" VerticalAlignment="Top" Width="498" Background="#FFEFAC20">
            <Button Content="Login" HorizontalAlignment="Left" Margin="181,27,0,0" VerticalAlignment="Top" Width="75" x:Name="btnlog" Click="btnlog_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="136" Margin="0,61,0,0" VerticalAlignment="Top" Width="498" Background="#FF2A398C">
            <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap"  VerticalAlignment="Top" Width="247" Margin="160,14,0,0"/>
            <PasswordBox x:Name="Password" HorizontalAlignment="Left" Margin="160,68,0,0" VerticalAlignment="Top" Width="247" Height="40"/>
            <Label HorizontalAlignment="Left" Margin="10,65,0,0" VerticalAlignment="Top" Width="144" FontSize="20" RenderTransformOrigin="-0.479,0.375" Height="43" Content="Password"/>
            <Label Content="Username" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" Width="150" FontSize="20"/>
        </Grid>
        <Image Margin="402,0,10,208" Source="Picture1.png" Stretch="Fill"/>

    </Grid>
</Window>
